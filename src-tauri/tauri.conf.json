{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Schoice",
  "version": "0.0.9",
  "identifier": "schoice",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Schoice簡單選",
        "url": "index.html",
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:schoice.db"]
    },
    "updater": {
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzMkZFRURCNDQzNEZFQTUKUldTbC9qUkUyKzR2MHhzdHhxQ2crUk9ST3M0RzA1YmFONWp5WW9LK3B2bmMzcnpZTG1NTU9NSHMK",
      "endpoints": [
        "https://github.com/cosmic1330/Schoice/releases/latest/download/latest.json"
      ]
    }
  }
}
